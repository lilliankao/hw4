<h1><%= @place["name"] %></h1>

<h2 class="mt-3">My Entries </h2>


<div class="container text-center">
<div class="row row-cols-3">

<% for entry in @entries %>

    <div class="col">
        <h3><%= entry["title"] %></h3>
        <h4><%= entry["occurred_on"] %></h4>
        <p><%= entry["description"] %></p>
        
<% if entry.uploaded_image.attached? %>
  <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
<% else %>
  <img src="<%= entry["image"] %>" class="img-fluid">
<% end %>

    </div>
<% end %>

</div>
</div>


<% if @current_user %>
<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>"><button type="button" class="btn btn-outline-primary">New Entry</button></a>
</p>
<% end %>

<p>
  <a href="/places"><button type="button" class="btn btn-outline-primary mt-2">Back to All Places</button></a>
</p>